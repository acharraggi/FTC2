<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:id="@+id/wifiHeader"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/wifiAvailable"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/wifiConnected"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/wifiState"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/wifiString"
        android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
